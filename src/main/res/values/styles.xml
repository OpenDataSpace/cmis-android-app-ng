<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <dimen name="pad">6dp</dimen>
    <dimen name="drawer">300dp</dimen>
    <dimen name="preference_padbottom">0dp</dimen>
    <dimen name="preference_padside">0dp</dimen>

    <integer name="preference_scrollstyle">0x02000000</integer>

    <color name="azure">#e5e5e5</color>

    <style name="OdsApp" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/OdsActionBar</item>
    </style>

    <style name="OdsDialog" parent="@style/Theme.AppCompat.Light.DialogWhenLarge">
        <item name="actionBarStyle">@style/OdsActionBar</item>
    </style>

    <style name="OdsActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:elevation" tools:ignore="NewApi">@dimen/pad</item>
    </style>

    <style name="OdsSectionHeader">
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:background">@drawable/underline</item>
    </style>

    <style name="OdsPanel">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

    <style name="OdsStyledPanel">
        <item name="android:background">@color/azure</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

    <style name="OdsBorderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/pad</item>
    </style>

    <style name="OdsTextPrimary">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="OdsTextSecondary">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
