<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <dimen name="pad">6dp</dimen>
    <dimen name="drawer">400dp</dimen>
    <dimen name="preference_padbottom">0dp</dimen>
    <dimen name="preference_padside">0dp</dimen>

    <integer name="preference_scrollstyle">0x02000000</integer>

    <style name="OdsApp" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/OdsActionBar</item>
    </style>

    <style name="OdsDialog" parent="@style/Theme.AppCompat.Light.DialogWhenLarge">
        <item name="actionBarStyle">@style/OdsActionBar</item>
    </style>

    <style name="OdsActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:elevation" tools:ignore="NewApi">@dimen/pad</item>
    </style>

    <style name="OdsSectionHeader">
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:background">@drawable/underline</item>
    </style>

    <style name="OdsPanel">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

</resources>
