<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/settings_caption">
    <PreferenceCategory android:title="@string/settings_links">
        <Preference
            android:key="web"
            android:summary="@string/settings_web_desc"
            android:title="@string/settings_web">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/app_weburl"/>
        </Preference>
        <Preference
            android:key="rate"
            android:summary="@string/settings_rating_desc"
            android:title="@string/settings_rating">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/app_market"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
